<div class="devise-wrapper">
  <div class="devise-container">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "devise-form"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "field-input" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, required: true, pattern: /^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*\W)(?!.* ).{8,128}$/, autocomplete: "new-password", class: "field-input"%>
        <span class="error-message">Password must be at least 8 characters long and contain 1 uppercase, 1 lowercase, 1 number and 1 special character</span>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "field-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => "devise-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>