<div class="devise-wrapper">
  <div class="devise-container">
    <h2>Your Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "devise-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <h3 class="devise-edit-header">Update Email</h3>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "field-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <h3 class="devise-edit-header">Update Password</h3>
      <div class="field">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", :class => "field-input" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, required: true, pattern: /^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*\W)(?!.* ).{8,128}$/, autocomplete: "new-password", class: "field-input"%>
        <span class="error-message">Password must be at least 8 characters long and contain 1 uppercase, 1 lowercase, 1 number and 1 special character</span>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "field-input" %>
      </div>

      <div>
        <%= f.submit "Update", :class => "devise-btn" %>
      </div>
    <% end %>

    <h3 class="devise-edit-header">Delete your account</h3>

    <div><%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, :class => "devise-btn" %></div>

    <%= link_to "Back", :back, :class => "devise-link" %>
  </div>
</div>