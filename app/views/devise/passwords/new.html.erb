<div class="devise-wrapper">
  <div class="devise-container">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "field-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Reset Password", :class => "devise-btn devise-btn-long" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>