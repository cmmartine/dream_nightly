<div style="font-family:Arial, Helvetica, sans-serif;">
  <%= render "devise/mailer/shared/header"%>
  <p style="margin-left: 5px;">Hello <%= @resource.email %>!</p>

  <p style="margin-left: 5px;">Your account has been locked due to an excessive number of unsuccessful sign in attempts.</p>

  <p style="margin-left: 5px;">Click the link below to unlock your account:</p>

  <p style="margin-left: 5px;"><%= link_to 'Unlock my account', unlock_url(@resource, unlock_token: @token) %></p>
  <%= render "devise/mailer/shared/footer"%>
</div>
